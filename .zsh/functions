## GETTING AROUND
function CD_AND_UPDATE(){
  cd $1;
  printf "\033c" #http://stackoverflow.com/questions/5367068/clear-the-ubuntu-bash-screen-for-real
  l
}

## GIT
function gitAddCommitPushMaster(){
  git commit -am $1;
  git push origin master;
}

function kitty(){
  echo '
                      .............                .""".             .""".    
              ..."""""             """""...       $   . ".         ." .   $    
          ..""        .   .   .   .   .    ..    $   $$$. ". ... ." .$$$   $    
