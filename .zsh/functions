      ."      . " . " . " . " . " . " . " .     $  "                    "   $   
     ."   . " . " . "           "   " . " . "  ."      ...          ...     ".  
    ."    . " . "    .."""""""""...     " . "  $     .$"              "$.    $  
   ."     . " . " .""     .   .    ""..   . " $ ".      .""$     .""$      ." $ 
  ."    " . " .       . " . " . " .    $    " $ "      "  $$    "  $$       " $ 
  $     " . " . " . " . " . " . " . "   $     $             $$.$$             $ 
  $     " . " . " . " . " . " . " . " .  $  " $  " .        $$$$$        . "  $ 
  $     " . " . " . " . " . " . " . " .  $    $      "  ..   "$"   ..  "      $ 
  ".    " . " . " . " . " . " . " . "   ."  "  $  . . . $  . .". .  $ . . .  $  
   $    " . " . " . " . " . " . " . "  ."   "            ".."   ".."       
    $     . " . " . " . " . " . "   .."   . " . "..    "             "    .."   
