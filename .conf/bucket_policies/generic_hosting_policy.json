/*
 *
* %%BUCKET_NAME%% - name of the bucket
*
*/

{
  "Version": "2008-10-17",
  "Statement": [{
    "Sid": "AddPerm",
    "Effect": "Allow",
    "Principal": {
      "AWS": "*"
    },
    "Action": [
      "s3:GetObject",
      "s3:PutObject"
    ],
    "Resource": "arn:aws:s3:::%%BUCKET_NAME%%/*"
  }]
}
